<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <CheckBox
            android:id="@+id/necessary1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:autoLink="none"
            android:textSize="12sp"
            android:onClick="necessary1"
            android:textColor="@color/river_auction_warm_grey"
            android:text="서비스 이용약관(동의필수)"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <CheckBox
            android:id="@+id/necessary2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:autoLink="none"
            android:textSize="12sp"
            android:onClick="necessary2"
            android:textColor="@color/river_auction_warm_grey"
            android:text="개인정보 취급방침(동의필수)"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="54dp"
            android:layout_marginRight="19dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/river_auction_warm_grey_two"
                android:text="@string/enter_phone_number_description"/>

            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/enter_phone_number_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_phone_number_hint"
                android:inputType="phone"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        style="@style/LeafyGreenButton"
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_phone_number_next_button"/>
</LinearLayout>
