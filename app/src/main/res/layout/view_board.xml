<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.riverauction.riverauction.widget.slidingtab.SlidingTabLayout
        android:id="@+id/my_lesson_sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="@color/river_auction_pale_grey"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.view.ViewPager
        android:id="@+id/my_lesson_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp"
        android:background="@android:color/white"/>

    <TextView
        style="@style/LeafyGreenButton"
        android:id="@+id/board_active_empty_button"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:text="@string/board_write_button"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/filter_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="68dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/floating_button"
        app:fab_colorNormal="@color/river_auction_leafy_green"
        app:fab_colorPressed="@color/river_auction_leafy_green"
        app:fab_colorRipple="@android:color/white"/>
</FrameLayout>
</LinearLayout>