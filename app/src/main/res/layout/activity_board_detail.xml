<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/bidding_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="@string/menu_bidding"
            android:background="@color/river_auction_leafy_green"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/bidding_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="@string/menu_lesson_cancel"
            android:background="@color/river_auction_orange_red"
            android:visibility="gone"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/category_label"
                android:paddingTop="3dp"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_gravity="top"
                android:src="@drawable/grade_university"
                android:layout_marginRight="4dp"/>
            <!-- 제목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:layout_marginBottom="3dp">
                <TextView
                    android:id="@+id/item_summary"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="1"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠"
                    android:textSize="15sp"
                    android:textColor="@color/river_auction_black"/>
            </LinearLayout>

            <!-- 아이디 라인 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@android:color/white"
                android:layout_marginBottom="3dp">
                <TextView
                    android:id="@+id/board_register_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/board_register_id"
                    android:gravity="center_vertical"
                    android:textColor="@color/river_auction_greyish"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/side"
                    android:gravity="center_vertical"
                    android:textColor="@color/river_auction_greyish"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/register_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/board_register_id"
                    android:gravity="center_vertical"
                    android:textColor="@color/river_auction_greyish"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/side"
                    android:gravity="center_vertical"
                    android:textColor="@color/river_auction_greyish"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/board_register_id"
                    android:gravity="center_vertical"
                    android:textColor="@color/river_auction_greyish"
                    android:textSize="13sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/river_auction_greyish"
                        android:text="@string/board_reply"/>
                    <TextView
                        android:id="@+id/review_cnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/river_auction_dark_sky_blue"
                        android:text="1"/>
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/divider"/>
            <TextView
                android:id="@+id/boardContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠"
                android:paddingLeft="18dp"
                android:paddingTop="18dp"
                android:paddingRight="18dp"
                android:paddingBottom="24dp"/>
            <!-- 버튼 라인 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/modifylayout"
                android:background="@android:color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="3dp">
                <ImageView
                    android:id="@+id/modify"
                    android:paddingTop="3dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:src="@drawable/modify2"
                    android:layout_marginRight="4dp"/>
                <ImageView
                    android:id="@+id/delete"
                    android:paddingTop="3dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:src="@drawable/delete2"
                    android:layout_marginRight="4dp"/>
                <!--TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/board_register_id"
                    android:gravity="center_vertical"
                    android:textColor="@color/river_auction_greyish"
                    android:textSize="13sp" -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="12dp"
                    >
                    <ImageView
                        android:id="@+id/reply"
                        android:paddingTop="3dp"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_gravity="top"
                        android:src="@drawable/replybutton"
                        android:layout_marginRight="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/river_auction_greyish"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="bottom"
                    android:paddingLeft="18dp"
                    android:textSize="11sp"
                    android:textColor="@color/river_auction_greyish"
                    android:text="@string/board_reply"/>
                <TextView
                    android:id="@+id/review_cnt2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="bottom"
                    android:paddingLeft="18dp"
                    android:textSize="11sp"
                    android:textColor="@color/river_auction_dark_sky_blue"
                    android:text="1"/>
            </LinearLayout>
            <!-- 리플라이 있을 때-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reply_container"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/shop_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <!-- 리플라이 쓰기-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/replyLayout"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.riverauction.riverauction.feature.photo.ProfileImageView
                        android:id="@+id/item_teacher_profile_image2"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/reply_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="left"
                            android:text="나의 답변이다~! 여기"
                            />
                        <!-- 아이디 라인 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/white"
                            android:layout_marginBottom="3dp">
                            <TextView
                                android:id="@+id/board_reply_id2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="@string/board_register_id"
                                android:gravity="center_vertical"
                                android:textColor="@color/river_auction_greyish"
                                android:textSize="13sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="@string/side"
                                android:gravity="center_vertical"
                                android:textColor="@color/river_auction_greyish"
                                android:textSize="13sp" />
                            <TextView
                                android:id="@+id/reply_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="@string/board_register_id"
                                android:gravity="center_vertical"
                                android:textColor="@color/river_auction_greyish"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/divider_dark"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="240dp">
                    <EditText
                        android:id="@+id/reply_content"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:singleLine="false"
                        android:textSize="15sp"
                        android:gravity="top"
                        android:hint="@string/contents_hint"/>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/noReply"
                android:visibility="gone"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/review_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:layout_marginTop="22dp"
                    android:paddingTop="18dp"
                    android:text="@string/teacher_item_reply_empty"
                    />
                <TextView
                    android:id="@+id/review_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="@string/teacher_item_reply_empty2"
                    android:paddingBottom="18dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginBottom="22dp"
                    />
            </LinearLayout>
            <include layout="@layout/divider_dark"/>
            <TextView
                android:id="@+id/replyContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠문과 3학년 교차지원에 대해 문의 드립니다. 무조건 성공하게 해 주세요~ 뿌빠라뿌빠"
                android:paddingLeft="18dp"
                android:paddingTop="18dp"
                android:paddingRight="18dp"
                android:paddingBottom="24dp"/>
            <include layout="@layout/divider_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 경매 상태 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@android:color/white">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingLeft="35dp">

                        <!-- 경매중 -->
                        <LinearLayout
                            android:id="@+id/lesson_detail_lesson_status_bidding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/icon_progress_green"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="@color/river_auction_leafy_green"
                                android:text="@string/common_lesson_status_bidding"/>
                        </LinearLayout>

                        <!-- 매칭중 -->
                        <LinearLayout
                            android:id="@+id/lesson_detail_lesson_status_dealing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/icon_stop"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="@color/river_auction_brownish_grey_two"
                                android:text="@string/common_lesson_status_dealing"/>
                        </LinearLayout>

                        <!-- 매칭 실패 -->
                        <LinearLayout
                            android:id="@+id/lesson_detail_lesson_status_canceled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="@color/river_auction_greyish_brown_three"
                                android:text="@string/common_lesson_status_cancel"/>

                            <TextView
                                android:id="@+id/lesson_detail_lesson_status_canceled_created_at"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/river_auction_greyish"/>
                        </LinearLayout>

                        <!-- 매칭 완료 -->
                        <LinearLayout
                            android:id="@+id/lesson_detail_lesson_status_finished"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="@color/river_auction_greyish_brown_three"
                                android:text="@string/common_lesson_status_finished"/>

                            <TextView
                                android:id="@+id/lesson_detail_lesson_status_finished_created_at"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/river_auction_greyish"/>
                        </LinearLayout>
                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/lesson_detail_remain_time_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingTop="3dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="3dp"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/bg_lesson_remain_time"
                            android:textSize="34sp"
                            android:textColor="@color/river_auction_greyish_brown_two"
                            android:text="00:00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/lesson_detail_remain_time_view"
                            android:layout_alignBaseline="@id/lesson_detail_remain_time_view"
                            android:layout_marginLeft="6dp"
                            android:layout_marginBottom="3dp"
                            android:textSize="15sp"
                            android:textColor="@color/river_auction_warm_grey"
                            android:text="@string/common_remain"/>
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/divider"/>

                <!-- 참여 인원 -->
                <FrameLayout
                    android:id="@+id/lesson_detail_bidding_count_container"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:drawableLeft="@drawable/icon_people_500"
                        android:drawablePadding="6dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:textColor="@color/river_auction_greyish_brown"
                        android:text="@string/lesson_detail_bidding_count"/>

                    <TextView
                        android:id="@+id/lesson_detail_bidding_count_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="225dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:textColor="@color/river_auction_dodger_blue"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/icon_arrow"/>
                </FrameLayout>

                <include layout="@layout/divider_dark"/>

                <!-- 기본 정보 -->
                <com.riverauction.riverauction.feature.common.BasicInfoView
                    android:id="@+id/lesson_detail_basic_info_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <include layout="@layout/divider_dark"/>

                <!-- 과외 정보 -->
                <com.riverauction.riverauction.feature.common.LessonInfoView
                    android:id="@+id/lesson_detail_lesson_info_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <include layout="@layout/divider_dark"/>

                <!-- 선생님에게 바라는점 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:background="@color/river_auction_pale_grey"
                        android:paddingLeft="18dp"
                        android:textSize="11sp"
                        android:textColor="@color/river_auction_warm_grey"
                        android:text="@string/lesson_detail_description_title"/>

                    <TextView
                        android:id="@+id/description_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"
                        android:paddingTop="18dp"
                        android:paddingRight="18dp"
                        android:paddingBottom="24dp"/>
                </LinearLayout>
                <include layout="@layout/divider_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <!-- dummy -->
                <View
                    android:id="@+id/bidding_button_dummy_view"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>