<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- on/off -->
    <LinearLayout
        android:id="@+id/profile_teacher_on_off_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:paddingTop="15dp"
            android:paddingRight="18dp"
            android:paddingBottom="15dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/profile_teacher_on_off_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/river_auction_brownish_grey"
                android:text="@string/profile_teacher_on_off_title"/>

            <TextView
                android:id="@+id/profile_teacher_on_off_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_below="@id/profile_teacher_on_off_title"
                android:textSize="11sp"
                android:textColor="@color/river_auction_dodger_blue"
                android:text="@string/profile_teacher_on_off_tip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_teacher_on_off_title"
                android:layout_toRightOf="@id/profile_teacher_on_off_tip"
                android:textSize="11sp"
                android:textColor="@color/river_auction_greyish"
                android:text="@string/profile_teacher_on_off_description"/>

            <ImageView
                android:id="@+id/profile_teacher_on_off_button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/toggle_on_off_selector"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>
    <include layout="@layout/divider_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@android:color/white">

        <FrameLayout
            android:id="@+id/profile_change_photo_container"
            android:layout_width="76dp"
            android:layout_height="68dp"
            android:layout_marginTop="18dp">

            <com.riverauction.riverauction.feature.photo.ProfileImageView
                android:id="@+id/profile_photo_view"
                android:layout_width="68dp"
                android:layout_height="68dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/icon_photo"/>
        </FrameLayout>

        <TextView
            android:id="@+id/profile_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            android:textColor="@color/river_auction_brownish_grey"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/river_auction_white_six"/>

    <!-- 기본정보수정 -->
    <RelativeLayout
        android:id="@+id/profile_change_basic_info_container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/river_auction_brownish_grey"
            android:text="@string/profile_change_basic_info"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/river_auction_white_six"/>

    <!-- 과외정보수정 -->
    <RelativeLayout
        android:id="@+id/profile_change_lesson_info_container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/river_auction_brownish_grey"
            android:text="@string/profile_change_lesson_info"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/river_auction_white_six"/>

    <!-- 내 아이템 / 구매 -->
    <RelativeLayout
        android:id="@+id/profile_purchase_item_container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/river_auction_brownish_grey"
            android:text="@string/profile_purchase_item"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/river_auction_white_six"/>

    <!-- FAQ -->
    <RelativeLayout
        android:id="@+id/profile_faq_container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/river_auction_brownish_grey"
            android:text="@string/profile_faq"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/river_auction_white_six"/>

    <!-- 문의 하기 -->
    <RelativeLayout
        android:id="@+id/profile_question_container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/river_auction_brownish_grey"
            android:text="@string/profile_question"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="18dp"
        android:background="@color/river_auction_white_six"/>
</LinearLayout>